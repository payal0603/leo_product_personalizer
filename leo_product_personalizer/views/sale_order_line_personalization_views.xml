<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_order_line_personalization_view_list" model="ir.ui.view">
        <field name="name">sale.order.line.personalization.view.list</field>
        <field name="model">sale.order.line.personalization</field>
        <field name="arch" type="xml">
            <list>
                <field name="sale_order_line_id"/>
                <field name="order_id"/>
                <field name="design_type"/>
                <field name="design_config_id"/>
                <field name="preview" widget="image" />
            </list>
        </field>
    </record>

    <record id="sale_order_line_personalization_view_form" model="ir.ui.view">
        <field name="name">sale.order.line.personalization.view.form</field>
        <field name="model">sale.order.line.personalization</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sale_order_line_id"/>
                        <field name="design_config_id"/>
                        <field name="design_type"/>
                    </group>
                    <group>
                        <field name="preview" widget="image" options="{'size': (300,300)}"/>
                        <field name="final_image" widget="image" options="{'size': (800,800)}"/>
                    </group>
                    <group>
                        <field name="fabric_json" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_line_personalization_action" model="ir.actions.act_window">
        <field name="name">Order Line Personalizations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line.personalization</field>
        <field name="view_mode">form</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>